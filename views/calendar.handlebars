<style>

    .header{
        width: 910px;
        height: 100px;
        margin: auto;
    }

    .subHeading{
        float:left;
        width: 33%;
        /*margin-left: 210px;*/
    }
    #monthAndYear{
        text-align:center;
    }

    #leftArrow{
        text-align:left;
        cursor: pointer;
    }

    #rightArrow{
        text-align:right;
        cursor: pointer;
    }

    .calendar{
        margin: auto;
        width: 910px;
        height: 640px;
    }

    .calendarHeader{
        width: 910px;
        height: 38px;
        margin-bottom: -20px;
    }

    .calendarBody{
        margin-top: 2px;
    }

    .weekDayName{
        float:left;
        width: 14.2%;
        height: 38px;
    }

    .mainName{
        text-align:center;
    }

    p{
        margin-left: 7px;
    }

    .calendarDate{
        float:left;
        border-style: solid;
        border-width: 1px;
        height: 100px;
        width: 14.2857143%;
        cursor: pointer;
    }
    .calendarWeek{
        width: 100%;
        height: 80px;
    }

    .thisIsToday{
        background-color: #e5e5ff ;
    }

</style>
<div>
    <div class="header">
        <div class="subHeading"><h1 id="leftArrow"> < </h1></div>
        <div class="subHeading"><h1 id="monthAndYear"> {{monthAndYear}} </h1></div>
        <div class="subHeading"><h1 id="rightArrow"> > </h1></div>
    </div>
    <div class="calendar">
        <div class="calendarHeader">
            {{#each weekdays as |weekday|}}
                <div class="weekDayName">
                    <h5 class="mainName">{{weekday}}</h5>
                </div>
            {{/each}}
        </div>
        <div class="calendarBody">
        {{#each weekList as |list|}}
            <br>
                <div class="calendarWeek">
                    {{#each list}}
                        {{#if today}}
                            <div class="calendarDate thisIsToday">
                                <p class="calNr"> {{dateNr}} </p>
                            </div>
                        {{else}}
                            <div class="calendarDate">
                                  <p class="calNr"> {{dateNr}} </p>
                              </div>
                        {{/if}}
                    {{/each}}
                </div>
        {{/each}}
        </div>
    </div>
</div>